<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment</h1>
        <div style="width: 30%; margin: 0 auto;" class="30%">
            <form action="/campgrounds/<%=campground.id%>/comments" method="POST">
            <div class="form-group" style="margin-bottom: 10px;">
                <input class="form-control" type="text" name="comment" placeholder="text">
            </div>
            <div class="form-group" style="margin-bottom: 10px;">
                <input class="form-control" type="text" name="author" placeholder="author">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" style="width: 200px;">Submit!</button>
            </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>


<%- include('../partials/footer') %>