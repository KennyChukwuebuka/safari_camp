    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Link to your CSS file -->
    <link rel="stylesheet" href="styles.css">
</head>
<body>

<header class="bg-dark text-white py-4">
    <div class="container">
        <h1>Welcome to Our Site</h1>
        <nav>
            <ul class="nav">
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li>
                <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
            </ul>
        </nav>
    </div>
</header>

<main class="container my-5">
    <section class="landing text-center">
        <h2 class="mb-4">Explore the Great Outdoors</h2>
        <p class="lead">Find the perfect camping spot and start your adventure today.</p>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <img src="https://chehaw.org/images/chehaw-camping.png" alt="Campground Image" class="img-fluid mb-4">
            </div>
        </div>
        <a href="/campgrounds" class="btn btn-primary btn-lg">View Campgrounds</a>
    </section>

    <hr>

    <section class="features text-center my-5">
        <h2 class="mb-4">Why Choose Us?</h2>
        <div class="row">
            <div class="col-md-4">
                <i class="fas fa-map-marker-alt fa-4x mb-3"></i>
                <h3>Beautiful Locations</h3>
                <p>Discover stunning campsites in scenic locations across the country.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-fire fa-4x mb-3"></i>
                <h3>Outdoor Activities</h3>
                <p>Enjoy a variety of outdoor activities including hiking, fishing, and more.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-coffee fa-4x mb-3"></i>
                <h3>Amenities</h3>
                <p>Modern amenities such as restrooms, showers, and picnic areas are available.</p>
            </div>
        </div>
    </section>
</main>

<footer class="bg-dark text-white py-4">
