<%- include('partials/header') %>

    <nav class="navbar navbar=default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Safari_Camp</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/">Login</a></li>
                    <li><a href="/">Sign up</a></li>
                    <li><a href="/">Logout</a></li>
                </ul>
            </div> 
        </div>
    </nav>

<div class="container">

    <header class="jumbotron">
        <div class="container">
                <h1>Welcome to Safari_Camp</h1>
                <p>View safari campground from Africa</p>
                <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new safari campground</a>
                </p>
         </div>
    </header>

    <div class="container">
        <div class="row text-center">
            <% campgrounds.forEach(function(campground) { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4"> <!-- Adjusted column sizes for responsiveness -->
                    <div class="thumbnail">
                        <img src="<%= campground.image %>" alt="<%= campground.name %>" class="img-fluid">
                        <!-- You might also want to include a caption or additional information -->
                        <div class="caption">
                            <h3><%= campground.name %></h3>
                            <!-- Additional information about the campground -->
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
<%- include('partials/footer') %>